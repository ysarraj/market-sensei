<div class="container">
<h1>Create new alert</h1>
<%= simple_form_for @alert do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
<div>
  <%= link_to "Alerts", alerts_path, class: "btn btn-secondary mt-4 mb-5" %>
</div>

</div>
