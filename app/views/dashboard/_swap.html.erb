<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    
    <!-- Input Token Card -->
    <div class="card shadow-sm mb-2 border-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
      <div class="card-body text-white p-3">
        <h6 class="card-title text-uppercase fw-bold mb-2 fs-6">Input<br>Token</h6>
        <div class="d-flex align-items-center gap-2 mb-2">
          <button class="btn btn-outline-light btn-sm px-2 py-1 rounded-pill fs-6">Select</button>
          <div class="flex-grow-1 bg-white bg-opacity-10 rounded-2 p-2 text-center">
            <span class="fw-bold">0.00</span>
          </div>
        </div>
        <div class="text-center">
          <small class="text-white-50">≈ $0.00</small>
        </div>
      </div>
    </div>

    <!-- Output Token Card -->
    <div class="card shadow-sm mb-2 border-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
      <div class="card-body text-white p-3">
        <h6 class="card-title text-uppercase fw-bold mb-2 fs-6">Output<br>Token</h6>
        <div class="d-flex align-items-center gap-2 mb-2">
          <button class="btn btn-outline-light btn-sm px-2 py-1 rounded-pill fs-6">Select</button>
          <div class="flex-grow-1 bg-white bg-opacity-10 rounded-2 p-2 text-center">
            <span class="fw-bold">0.00</span>
          </div>
        </div>
        <div class="text-center">
          <small class="text-white-50">≈ $0.00</small>
        </div>
      </div>
    </div>

    <!-- Swap Button -->
    <div class="text-center">
      <button class="btn btn-danger btn-sm px-3 py-2 rounded-pill fw-bold text-uppercase shadow">
        Swap
      </button>
    </div>

  </div>
</div>

