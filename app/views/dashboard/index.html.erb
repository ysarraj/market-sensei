<!-- Dashboard Layout -->
<div class="container-fluid py-3">
  <div class="row g-3">
    <!-- Left rail: SWAP + MARKET DATA -->
    <div class="col-12 col-lg-2 d-flex flex-column">
      <div class="card flex-grow-1 mb-3 mb-lg-3" style="min-height: 280px;">
        <div class="card-header fw-semibold">SWAP</div>
        <div class="card-body p-0">
          <!-- render 'swap' partial here -->

        </div>
      </div>
      <div class="card flex-grow-1" style="min-height: 320px;">
        <div class="card-header fw-semibold"><%= @crypto_details[:name] %> Details</div>
        <div class="card-body p-0">
          <%= render partial: "marketdata" %>
        </div>
      </div>
    </div>
    <!-- Center: CHART above TX HISTORY -->
    <div class="col-12 col-lg-7 d-flex flex-column">
      <div class="card flex-grow-1 mb-3" style="min-height: 520px;">
        <div class="card-header fw-semibold"><%= @crypto_details[:name] %> Chart</div>
        <div class="card-body p-0">
          <!-- render 'chart' partial here -->
          <%= render "chart", chart_symbol: "AAVE/USD" %>
        </div>
      </div>
      <div class="card" style="min-height: 160px;">
        <div class="card-header d-flex align-items-center justify-content-between">
          <span class="fw-semibold">TX HISTORY</span>
          <div class="d-flex align-items-center gap-3">
            <!-- sample icon placeholders; swap with Font Awesome -->
            <span class="bi bi-list"></span>
            <span class="bi bi-download"></span>
            <span class="bi bi-eye"></span>
            <span class="bi bi-gear"></span>
          </div>
        </div>
        <div class="card-body p-0">
          <!-- render 'tx_history' partial here -->

        </div>
      </div>
    </div>
    <!-- Right rail: SCREENER -->
    <div class="col-12 col-lg-3">
      <div class="card h-100" style="min-height: 680px;">
        <div class="card-header fw-semibold">SCREENER</div>
        <div class="card-body p-0">
          <!-- render 'screener' partial here -->
         <%= render partial: "screener" %>
        </div>
      </div>
    </div>
  </div>
</div>
