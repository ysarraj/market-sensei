<% if @marketdata&.any? %>
<div class="row">
    <div class="col-12">
        <h5>Essential Market Metrics</h5>
        <hr>
        
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Metric</th>
                        <th class="text-center">Daily</th>
                        <th class="text-center">Weekly</th>
                        <th class="text-center">Monthly</th>
                    </tr>
                </thead>
                <tbody>
                    <% @marketdata.each do |item| %>
                        <tr>
                            <td class="fw-bold"><%= item[:name] %></td>
                            <td class="text-center">
                                <span class="badge bg-primary"><%= item[:daily] %></span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-secondary"><%= item[:weekly] %></span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-info"><%= item[:monthly] %></span>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        
        <div class="row mt-3">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <h6 class="card-title text-muted small mb-2">Data Source</h6>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-success me-2">Live</span>
                            <small class="text-muted">Llama.fi API</small>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <h6 class="card-title text-muted small mb-2">Last Updated</h6>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-primary me-2">â†»</span>
                            <small class="text-muted"><%= Time.current.strftime("%H:%M") %></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% else %>
<div class="row">
    <div class="col-12 text-center" style="margin-top: 3rem;">
        <div class="alert alert-info" role="alert">
            <h6 class="alert-heading">No Market Data Available</h6>
            <p class="mb-0">Unable to fetch market data at this time. Please try again later.</p>
        </div>
    </div>
</div>
<% end %>